{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <br/>
        <div class="notification">
            {% if error %}
                <div class="notification is-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="tile is-ancestor">
                <div class="tile is-parent is-4">
                    <div class="tile is-child box notification is-primary">
                        <p class="title">
                            Connexion :
                        </p>
                        <p>
                            Connectez-vous pour retrouver vos donn√©es et graphs.
                        </p>
                    </div>
                </div>
                <div class="tile is-parent is-8">
                    <div class="tile is-child  box">
                        <form action="{{ path('login') }}" method="post">
                            <div class="field">
                                <label class="subtitle" for="username">Utilisateur :</label>
                                <p class="control">
                                    <input class="input" type="text" id="username" name="_username" value="{{ lastUsername }}" />
                                </p>
                            </div>

                            <div class="field">
                                <label class="subtitle" for="password">Mot de passe :</label>
                                <p class="control">
                                    <input class="input" type="password" id="password" name="_password" />
                                </p>
                            </div>

                            <button class="button is-primary" type="submit">login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}